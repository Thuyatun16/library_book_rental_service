{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..", 
  "testEnvironment": "node",
  "testRegex": "test/.*\\.e2e-spec\\.ts$", 
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "generated/prisma": "<rootDir>/generated/prisma",
    "@client": "<rootDir>/generated/prisma",
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}